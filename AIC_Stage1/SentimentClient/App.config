<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_IBillingService" />
            </basicHttpBinding>
            <wsHttpBinding>
                <binding name="WSHttpBinding_IStatistic" />
                <binding name="WSHttpBinding_IAuthenticator" />
            </wsHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://localhost:8001/Sentiment/Billing/BillingService/BillingService.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IBillingService"
                contract="BillingServiceReference.IBillingService" name="BasicHttpBinding_IBillingService" />
            <endpoint address="http://localhost:8000/Sentiment/Authentication/AuthenticatorService"
                binding="wsHttpBinding" bindingConfiguration="WSHttpBinding_IAuthenticator"
                contract="AuthServiceReference.IAuthenticator" name="WSHttpBinding_IAuthenticator">
                <identity>
                    <userPrincipalName value="Win7box\Bernhard" />
                </identity>
            </endpoint>
            <endpoint address="http://localhost:8000/Sentiment/Statistic/StatisticService"
                binding="wsHttpBinding" bindingConfiguration="WSHttpBinding_IStatistic"
                contract="StatServiceReference.IStatistic" name="WSHttpBinding_IStatistic">
                <identity>
                    <userPrincipalName value="Win7box\Bernhard" />
                </identity>
            </endpoint>
        </client>
    </system.serviceModel>
</configuration>